/*
    application.css
*/
html {
  position: relative;
  min-height: 100%;
}
body {
  background: url('jumbotron-bg.jpg') #fff no-repeat center 180px fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  height: 100%;
}

.main-container {
    max-width: 900px;
}

.header {
    display: inline-block;
    margin: 1px auto 80px auto;
    width: 100%;
    height: 100px;
    font-family: "Ubuntu", sans-serif;
    line-height: 100px;
}

.header h1 {
    float: left;
    text-shadow: 0 0 1px #666;
}

.header h1 > small {
    display: block;
    font-size: 50%;
}


.header > nav,
.header > nav ul {
    float: right;
    list-style-type: none;
}

.header > nav ul li {
    display: inline-block;
    font: 20px "Ubuntu", sans-serif;
}

.header > nav ul li a:visited, a:hover, a:active,
.active {
    text-decoration: none;
    color: #327CCB;
    text-shadow: 0 0 1px #327CCB;
}

.header > nav ul li a {
    display: block;
    padding: 0 20px;
    text-transform: uppercase;
    line-height: 100px;
    color: #327CCB;
}

.main {
    margin-top: 40px !important;
}

.pull-down {
    margin-top: 20px;
}
.main h2 {
    display: inline-block;
    padding: 5px;
    font: 28px "Ubuntu", sans-serif;
    background-color: #fff;
    box-shadow: 0 0 5px #000;
    clear: both;
}

.main > h2 small {
    display: block;
}

.content {
    display: block;
    padding: 30px 0;
}

.share {
    background-color: #fff;
}


.sidebar-list {
    color: #fff;
    font-size: 12px;
}

/*
    Listings
*/

.movie-listing {
    display: inline-block;
    width: 100%;
    margin-bottom: 20px;
    min-height: 20px;
}

.movie-listing-item {
    display: block;
    margin: 20px auto;
    padding: 20px 5px;
    width: 100%;
    font-size: 20px;
    line-height: 20px;
    background-color: rgba(3, 0, 0, .8);
    color: #f0f0f0;
}

.movie-listing-item:hover {
    text-transform: none;
    color: #fff;
    display: block;
    background-color: rgba(3, 0, 0, 1);
}

.listing-point {
    border-right: 1px solid #333;
    padding: 8px;
    margin-right: 2px;
    color: #FCD920;
}

.listing-point em {
    font-size: 12px;
    vertical-align: bottom;
}

.misc-listing {
    font-size: 18px;
    color: #f9f9f9;
    padding: 10px;
}

.misc-listing ul {
    margin: 10px auto;
}

.misc-listing ul li{
    margin: 3px;
    background-color: #fff;
    border-radius: 3px;
}

.misc-listing ul li a {
    font-size: 14px;
    text-decoration: none;
    color: #2a2a2a;
}

.misc-listing ul li a:hover {
    text-decoration: none;
    text-shadow: none;
}

.list-subtitle {
    display: block;
    padding: 5px;
    margin: 10px auto;
    text-transform: uppercase;
}

.list-subtitle a {
    font-size: 12px;
    text-transform: none;
    vertical-align: middle;
}

/* For hover effects */
.header > nav ul li a, .movie-listing-item {
    transition: all 0.5s ease
}

/* Somehow overrides .content */
.moviecard {
    background-color: #fff;
    border-top: 2px solid #000;
}

.movie-stats {
    margin: -30px auto 30px auto;
    padding: 10px;
    min-height: 200px;
    border-bottom: 1px solid #000;
    box-shadow: inset 0 0 1px #000;
    background-color: #2a2a2a;
    text-align: center;
    color: #fff;
}

.movie-stats img {
    margin: 0 auto;
}

.movie-stats p {
    height: 100%;
    padding: 10px;
    text-shadow: 0 0 1px #333;
}

.points {
    padding: 20px;
    margin-right: 5px;
    font: 28px "Ubuntu", sans-serif;
    color: #fff;
    background-color: #327CCB;
}

.points > small {
    font-size: 12px;
    vertical-align: middle;
}

.moviecard-plot {
    padding: 10px 30px;
    font-size: 18px;
    font-weight: bold;
}

.moviecard-actions {
    margin-bottom: -30px;
    padding: 10px 30px;
    background-color: #f0f0f0;
}

.push {
    margin-bottom: 2px;
}

@media screen and (max-width: 720px) {
    body {
      background: url('jumbotron-bg.jpg') #fff no-repeat center 0 fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      height: 100%;
    }
    .header {
        display: inline;
        margin: 0 auto;
        width: 100%;
        height: 80px;
        font-family: "Ubuntu", sans-serif;
        line-height: 80px;
    }

    .header h1,
    .header > nav,
    .header > nav ul {
        color: #fff;
        float: left;
        list-style-type: none;
        text-align: center;
    }

    .header > nav ul li {
        display: inline-block;
        font: 14px "Ubuntu", sans-serif;
        text-align: center;
    }

    .header > nav ul li a:visited, a:hover, a:active,
    .active {
        text-decoration: none;
        color: #327CCB;
        text-shadow: 0 0 1px #327CCB;
    }

    .header > nav ul li a {
        display: block;
        padding: 0 5px;
        text-transform: uppercase;
        line-height: 50px;
        color: #327CCB;
    }



    .points {
        padding: 0;
        font: 16px "Ubuntu", sans-serif;
        font-weight: bolder;
        color: #327CCB;
        background-color: transparent;
    }

    .moviecard-actions ul {
        display: block;
    }

    .moviecard-actions ul li {
        display: block;
        padding: 5px;
    }
}