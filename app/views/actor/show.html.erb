<% if @actor %>
<% content_for :og_tags do %>
<meta property="og:title" content="Appearances for <%= @actor.name %>.">
<meta property="og:description" content="Crunching data from several big movie sites, giving you better movie ratings.">
<meta property="og:video:actor" content="<%= @actor.name %>">
<meta property="og:url" content="<%= request.original_url %>">
<meta property="og:site_name" content="filmcheck">
<meta property="og:type" content="video.movie">
<% end %>
<h2>Appearances for <%= @actor.name %></h2>
<div class="content">
    <div class="movie-listing">
        <% for movie in @actor.movies %>
            <%= link_to show_movie_path(movie.title.parameterize, movie.imdb), :class => 'movie-listing-item' do %>
             <span class="listing-point"><%= '%.1f' % movie.score %> <em>of 10</em></span> <%= movie.title %>
            <% end %>
        <% end %>
    </div>
</div>
<% else %>
<p>Shit hit the fan! The genre you searched for does not exist...</p>
<% end %>