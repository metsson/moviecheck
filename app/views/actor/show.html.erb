<% if @actor %>
<% content_for :title, "List of appeareances for #{@actor.name} on" %>
<h3>Appereances for <%= @actor.name %></h3>
<ul>
 <% for movie in @actor.movies %>
    <li>
        <%= link_to "#{movie.title} (#{movie.year})", show_movie_path(movie.title.parameterize, movie.imdb) %>
    </li>
<% end %>
<% else %>
<p>Shit hit the fan! The actor you searched for does not exist...</p>
<% end %>