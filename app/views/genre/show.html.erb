<% if @genre %>
<% content_for :title, "#{@genre.genre} movies on" %>
<% content_for :page_header, "Showing #{@genre.genre.downcase} movies" %>
<ul>
 <% for movie in @genre.movies %>
    <li>
        <%= link_to "#{movie.title} (#{movie.year})", show_movie_path(movie.title.parameterize, movie.imdb) %>
    </li>
<% end %>
<% else %>
<p>Shit hit the fan! The genre you searched for does not exist...</p>
<% end %>